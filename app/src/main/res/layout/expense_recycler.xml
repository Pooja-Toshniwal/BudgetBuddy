<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_margin="5dp"
    android:background="@color/card_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/card_bg"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:maxLines="1"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textStyle="bold"
                android:background="@color/card_bg"
                android:id="@+id/date_txt_expense"
                android:textColor="@color/black"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/type_txt_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Type"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textStyle="bold"
                android:text="Description"

                android:maxLines="1"
                android:layout_below="@id/type_txt_expense"
                android:id="@+id/note_txt_expense"
                android:textColor="@color/black"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/amount_txt_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="200"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/expense_colour"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>



